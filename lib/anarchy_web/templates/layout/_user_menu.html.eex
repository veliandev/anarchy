<ul>
<%= if @current_user do %>
  <li><%= @current_user.email %></li>
  <li><%= link "Settings", to: AnarchyWeb.Router.Helpers.user_settings_path(@conn, :edit) %></li>
  <li><%= link "Log out", to: AnarchyWeb.Router.Helpers.user_session_path(@conn, :delete), method: :delete %></li>
<% else %>
  <li><%= link "Log in", to: AnarchyWeb.Router.Helpers.user_session_path(@conn, :new) %></li>
<% end %>
</ul>
