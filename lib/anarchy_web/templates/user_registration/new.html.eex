<h1>Register</h1>

<%= form_for @changeset, AnarchyWeb.Router.Helpers.user_registration_path(@conn, :create), fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :email %>
  <%= email_input f, :email, required: true %>
  <%= error_tag f, :email %>

  <%= label f, :password %>
  <%= password_input f, :password, required: true %>
  <%= error_tag f, :password %>

  <div>
    <%= submit "Register" %>
  </div>
<% end %>

<p>
  <%= link "Log in", to: AnarchyWeb.Router.Helpers.user_session_path(@conn, :new) %> |
  <%= link "Forgot your password?", to: AnarchyWeb.Router.Helpers.user_reset_password_path(@conn, :new) %>
</p>
